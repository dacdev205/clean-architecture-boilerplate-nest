model Category {
  id          String    @id @default(uuid()) @db.VarChar(36)
  name        String   @db.VarChar(255)
  products    Product[] 
  createdAt   DateTime  @default(now()) @db.Timestamp
  updatedAt   DateTime  @db.Timestamp
  deletedAt   DateTime?  @db.Timestamp

  @@map("categories") 
}
